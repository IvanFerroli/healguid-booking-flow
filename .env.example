# Chave pública do Stripe (publishable key)
STRIPE_PUBLISHABLE_KEY=insira_aqui_sua_chave_publica_da_plataforma_de_pagamentos_stripe

# Mesma chave pública, mas exposta no front-end
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=insira_aqui_sua_chave_publica_da_plataforma_de_pagamentos_stripe_para_uso_no_frontend

# Segredo do webhook do Stripe
STRIPE_WEBHOOK_SECRET=insira_aqui_o_segredo_do_webhook_da_plataforma_de_pagamentos_stripe

###############################################################################
# CAL.COM
###############################################################################

# Chave da API do Cal.com
CAL_API_KEY=insira_aqui_sua_chave_de_api_da_plataforma_de_agendamentos_cal_com

# URL base da API do Cal.com (pode manter essa)
CAL_API_URL=https://api.cal.com/v1


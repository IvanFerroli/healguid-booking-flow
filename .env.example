###############################################################################
# APP CONFIG
###############################################################################

# Public URL of the app (used for Stripe redirect URLs)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Next.js runtime environment
NODE_ENV=development


###############################################################################
# STRIPE
###############################################################################

# Secret API key (server-side only)
STRIPE_SECRET_KEY=__STRIPE_SECRET_KEY__

# Publishable key (client-side allowed)
STRIPE_PUBLISHABLE_KEY=__STRIPE_PUBLISHABLE_KEY__

# Webhook signing secret (Stripe CLI or Dashboard)
STRIPE_WEBHOOK_SECRET=__STRIPE_WEBHOOK_SECRET__


###############################################################################
# CAL.COM AVAILABILITY API
###############################################################################

# Starter plan API key (v1 only)
CAL_API_KEY=__CAL_API_KEY__


###############################################################################
# DATABASE (SQLite)
###############################################################################
# No env vars needed â€” Prisma uses file:./dev.db directly.
# Added here only for possible future switches to Postgres/MySQL.
DATABASE_URL=file:./dev.db
